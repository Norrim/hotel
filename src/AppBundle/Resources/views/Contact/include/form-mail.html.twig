        {#<div class="mg-contact-form-input">#}
            {#<label for="full-name">{{ 'contactpage.form.full-name'|trans }}</label>#}
            {#<input type="text" class="form-control" id="full-name">#}
        {#</div>#}
        {#<div class="mg-contact-form-input">#}
