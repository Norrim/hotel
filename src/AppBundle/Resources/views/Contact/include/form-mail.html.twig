    {{ form_start(form) }}


    <div class="mg-contact-form-input">
        <label for="contact_name">{{ 'contactpage.form.full-name'|trans }}</label>
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>
    <div class="mg-contact-form-input">
        <label for="contact_email">E-mail</label>
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="mg-contact-form-input">
        <label for="contact_subject">{{ 'contactpage.form.subject'|trans }}</label>
        {{ form_widget(form.subject) }}
        {{ form_errors(form.subject) }}
    </div>
    <div class="mg-contact-form-input">
        <label for="contact_message">Message</label>
        {{ form_widget(form.message) }}
        {{ form_errors(form.message) }}
    </div>

    {# Render CSRF token etc .#}
    <div style="display:none">
        {{ form_rest(form) }}
    </div>

    <input type="submit" class="btn btn-dark-main pull-right" value="{{ 'contactpage.form.send'|trans }}">

    {{ form_end(form) }}
</div>
