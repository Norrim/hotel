{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}
    Gestion des aménagements
{% endblock %}

{% block pageName %}
    Gestion des aménagements
{% endblock %}

{% block body %}

    {# Message flashbag #}
    {%  include 'AdminBundle::flashBag.html.twig' with {'flashMessageNoticeList' : app.session.flashbag.get('notice')} %}

    {# Bouton Ajouter #}
    <div class="row">
        <div class="col-lg-12">
            <p><a href="{{ path('admin_fecilities_add') }}" class="btn btn-success pull-right"><i class="fa fa-plus fa-lg"></i> Ajouter</a></p>
            <br /><br />
        </div>
    </div>

    {# Tableau de la liste des rooms #}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des aménagements
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="tableCategoryList">
                            <thead>
                                <tr>
                                    <th> Nom </th>
                                    <th> Icone </th>
                                    <th> Actions </th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for fecility in fecilities %}
                                <tr>
                                    {# COLUMN NAME #}
                                    <td class="col-md-2">
                                        {{ translate(fecility.translations, 'name') }}
                                    </td>

                                    {# COLUMN ICON #}
                                    <td class="col-md-3">
                                        <i class="fa fa-{{ fecility.icon }} fa-2 "></i>
                                    </td>

                                    {# COLUMNS ACTION #}
                                    <td class="col-md-2">
                                        <a href="{{ path('admin_fecilities_edit', {'fecilities' : fecility.id}) }}" class="btn btn-primary btn-circle" title="Editer"><i class="fa fa-pencil fa-lg"></i> </a>
                                        <a href="{{ path('admin_fecilities_delete', {'fecilities' : fecility.id}) }}" class="btn btn-danger btn-circle" title="Supprimer"><i class="fa fa-trash-o fa-lg"></i></a>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
