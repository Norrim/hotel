{% extends 'AdminBundle::layout.html.twig' %}

{% block title %}
    Gestion des chambres
{% endblock %}

{% block pageName %}
    Gestion des chambres
{% endblock %}

{% block body %}

    {# Message flashbag #}
    {%  include 'AdminBundle::flashBag.html.twig' with {'flashMessageNoticeList' : app.session.flashbag.get('notice')} %}

    {# Bouton Ajouter #}
    <div class="row">
        <div class="col-lg-12">
            <p><a href="{{ path('admin_room_add')}}" class="btn btn-success pull-right"><i class="fa fa-plus fa-lg"></i> Ajouter</a></p>
            <br /><br />
        </div>
    </div>

    {# Tableau de la liste des rooms #}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des chambres
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="tableCategoryList">
                            <thead>
                                <tr>
                                    <th> Nom </th>
                                    <th> Image principale </th>
                                    <th> Galerie </th>
                                    <th> Actions </th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for room in rooms %}
                                <tr>
                                    <td>
                                        {% for roomTranslation in room.translations %}
                                            {{ roomTranslation.locale }} : {{ roomTranslation.name }} <br/>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if room.picture is null %}
                                            <a href="#" class="btn btn-success btn-circle" title="Ajouter"><i class="fa fa-plus fa-lg"></i> </a>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-success btn-circle" title="Ajouter une photo"><i class="fa fa-plus fa-lg"></i> </a>
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-primary btn-circle" title="Editer"><i class="fa fa-pencil fa-lg"></i> </a>
                                        <a href="#" class="btn btn-danger btn-circle" title="Supprimer"><i class="fa fa-trash-o fa-lg"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
